<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>.NET Library for creating chatbots.</Description>
    <AssemblyTitle>Qooba.ServerlessFabric</AssemblyTitle>
    <VersionPrefix>1.0.0-alpha1</VersionPrefix>
    <Authors>Jakub So�tys</Authors>
    <TargetFramework>net46</TargetFramework>
    <AssemblyName>Qooba.Bot.Builder</AssemblyName>
    <PackageId>Qooba.Bot.Builder</PackageId>
    <PackageTags>bots</PackageTags>
    <PackageIconUrl>https://raw.githubusercontent.com/qooba/Qooba.Bot.Builder/master/icon.png</PackageIconUrl>
    <PackageProjectUrl>https://github.com/qooba/Qooba.Bot.Builder</PackageProjectUrl>
    <PackageLicenseUrl>https://raw.github.com/qooba/Qooba.Bot.Builder/master/LICENSE</PackageLicenseUrl>
    <GenerateAssemblyConfigurationAttribute>false</GenerateAssemblyConfigurationAttribute>
    <GenerateAssemblyCompanyAttribute>false</GenerateAssemblyCompanyAttribute>
    <GenerateAssemblyProductAttribute>false</GenerateAssemblyProductAttribute>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNet.WebApi.Core" Version="5.2.3" />
    <PackageReference Include="Microsoft.Bot.Builder" Version="3.5.2" />
    <PackageReference Include="Microsoft.Bot.Connector" Version="3.5.1-alpha" />
    <PackageReference Include="Autofac" Version="4.1.1" />
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'net46' ">
    <Reference Include="System" />
    <Reference Include="Microsoft.CSharp" />
  </ItemGroup>

</Project>
